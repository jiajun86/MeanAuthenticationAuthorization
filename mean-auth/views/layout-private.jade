extends layout

block navbar
  nav.navbar.navbar-default.navbar-static-top
    div.container-fluid
      div.navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbarCollapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/home") Welcome
      div.collapse.navbar-collapse#navbarCollapse
        ul.nav.navbar-nav
          li: a(href="/home") Home
          li: a(href="/profile") Profile
          if user.role === 'admin'
            li: a(href="/users") Users
        ul.nav.navbar-nav.navbar-right
          li.active: a(href="/sign-out") Sign-out
